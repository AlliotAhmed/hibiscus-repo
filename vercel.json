{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "main.py"
    },
    "functions": {
        "main.py": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
} 